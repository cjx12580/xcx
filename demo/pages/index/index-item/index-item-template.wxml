<template name="indexItem">
  <view class='container'>
    <view class='author-date'>
      <image class='author' src='{{author_img}}'></image>
      <text class='date'>{{date}}</text>
    </view>
    <text class='title'>{{title}}</text>
    <image class='post' src='{{post_img}}'></image>
    <text class='content'>{{content}}</text>
    <view class='like'>
      <image class='like-image' src='/images/icon/chat.png'></image>
      <text class='like-font'>{{collect_num}}</text>
      <image class='like-image' src='/images/icon/view.png'></image>
      <text class='like-font'>{{view_num}}</text>
    </view>
  </view>
</template>